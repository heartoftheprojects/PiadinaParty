<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/offerDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Descrizione dell'offerta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/offerPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Prezzo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/offerDescription"
        app:layout_constraintEnd_toStartOf="@+id/pointsRequired" />

    <TextView
        android:id="@+id/pointsRequired"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Punti richiesti"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/offerDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>